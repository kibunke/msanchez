<div id="searcher" class="row">
    <div class="col-md-3 col-md-offset-2 ">
        <h3>
            <strong>Encontr&aacute; tu Couch</strong>
        </h3>
        <div>
            <form id="searchForm" class="form-horizontal">
                <div class="row">
                    <div class="col-md-11">
                        <div class="form-group form-group-sm">
                            <label for="searchCouchTipo" class="col-md-3 control-label ">Tipo</label>
                            <div class="col-md-9">
                                <select id="searchCouchTipo" class="form-control" name="idTipoCouch">
                                    <option value="">Seleccionar...</option> 
                                    {% for tipo in tipos %}
                                        <option value="{{ tipo.idTipoCouch }}">{{ tipo.nombre |title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label for="searchCouchLugar" class="col-md-3 control-label">Lugar</label>
                            <div class="col-md-9">
                                <select id="searchCouchProvincia" name="idProvincia" class="form-control">
                                    <option value="">Provincia...</option>
                                    {% for provincia in	provincias %}
                                        <option value="{{ provincia.id }}">{{ provincia.nombre | title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            <label for="searchCouchLugar" class="col-md-3 control-label"> 
                                <img id="ciudadLoading" src="{{ constant('PATH_URL_IMG') }}loading7.gif" style="height: 25px; background: none" alt="Logo de Couchinn">
                            </label>
                            <div class="col-md-9">
                                <select id="searchCouchCiudad" class="form-control" name="idCiudad">
                                    <option value="">Ciudad...</option> 
                                    {% for ciudad in ciudades %}
                                        <option value="{{ ciudad.idCiudad }}">{{ ciudad.nombre | title }}</option> 
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            <label for="searchCouchDescripcion" class="col-md-3 control-label">Descripci&oacute;n</label>
                            <div class="col-md-9">
                                <textarea id="searchCouchDescripcion" name="descripcion" class="form-control" rows="2" placeholder="Descripción"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-5 col-sm-10">
                                <button id="clearSearchCouchSubmit" type="reset" onclick=" location.href = ' {{ constant('ROOT_URL') }}index.php'" class= "btn btn-primary btn-sm">LIMPIAR</button>
                                <button id="searchCouchSubmit" type="submit"
                                        data-loading-text="Buscando..." class="btn btn-primary btn-sm">BUSCAR</button>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-5">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                <li data-target="#carousel-example-generic" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="{{ constant('PATH_URL_IMG') }}foto1.png" style="height:347px; width: 796px;" alt="Logo de Couchinn">
                    <div class="carousel-caption">
                        <blockquote class="blockquote-reverse">
                            <p>"Porque no hay nada m&aacute;s lindo que viajar y sentirte como en casa..."</p>
                            <footer>Maria Luisa Herrera <cite title="Source Title"><strong>MERCEDES</strong></cite></footer>
                        </blockquote>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ constant('PATH_URL_IMG') }}foto2.png" style="height:347px; width: 796px;" alt="Logo de Couchinn">
                    <div class="carousel-caption">
                        <blockquote class="blockquote-reverse">
                            <p>"Hermosos lugares...hermosas personas..."</p>
                            <footer>Juan Higuerira <cite title="Source Title"><strong>CONCORDIA</strong></cite></footer>
                        </blockquote>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ constant('PATH_URL_IMG') }}foto3.png" style="height:347px; width: 796px;" alt="Logo de Couchinn">
                    <div class="carousel-caption">
                        <blockquote class="blockquote-reverse">
                            <p>"No veo la hora de volver el año que viene..."</p>
                            <footer>Liliana  Medina <cite title="Source Title"><strong>CAPITAL FEDERAL</strong></cite></footer>
                        </blockquote>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ constant('PATH_URL_IMG') }}foto4.png" style="height:347px; width: 796px;" alt="Logo de Couchinn">
                    <div class="carousel-caption">
                        <blockquote class="blockquote-reverse">
                            <p>"La mejor forma de viajar..."</p>
                            <footer>Luis Su&aacute;rez <cite title="Source Title"><strong>LA PLATA</strong></cite></footer>
                        </blockquote>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>